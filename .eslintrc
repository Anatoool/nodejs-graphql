{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "zarplata"
  ],
  "plugins": [
    "@typescript-eslint",
    "graphql"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "env" : {
    "node" : true,
    "es6": true
  },
  "rules": {
    "indent": ["error", 4],
    "simple-import-sort/imports": "off"
  }
}
